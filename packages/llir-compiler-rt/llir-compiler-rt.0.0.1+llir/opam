opam-version: "2.0"
maintainer: "n@ndor.email"
homepage: "https://github.com/nandor/llir-llvm"
bug-reports: "https://github.com/nandor/llir-opam-repository/issues"
authors: ["Chris Lattner" "Vikram Adve"]
license: "apache"
build: [
  [ "mkdir" "Release" ]
  [
    "cmake" "compiler-rt"
      "-B" "Release"
      "-DCOMPILER_RT_BUILD_BUILTINS=ON"
      "-DCOMPILER_RT_BUILD_SANITIZERS=OFF"
      "-DCOMPILER_RT_BUILD_XRAY=OFF"
      "-DCOMPILER_RT_BUILD_LIBFUZZER=OFF"
      "-DCOMPILER_RT_BUILD_PROFILE=OFF"
      "-DCMAKE_C_COMPILER=%{prefix}%/bin/llir_%{arch}%-pc-linux-musl-gcc"
      "-DCMAKE_ASM_COMPILER=%{prefix}%/bin/llir_%{arch}%-pc-linux-musl-gcc"
      "-DCMAKE_AR=%{prefix}%/bin/llir_%{arch}%-pc-linux-musl-ar"
      "-DCMAKE_NM=%{prefix}%/bin/llir_%{arch}%-pc-linux-musl-nm"
      "-DCMAKE_RANLIB=%{prefix}%/bin/llir_%{arch}%-pc-linux-musl-ranlib"
      "-DCMAKE_C_COMPILER_TARGET=llir_%{arch}%-pc-linux-musl"
      "-DCMAKE_ASM_COMPILER_TARGET=llir_%{arch}%-pc-linux-musl"
      "-DCOMPILER_RT_DEFAULT_TARGET_ONLY=ON"
      "-DLLVM_CONFIG_PATH=%{prefix}%/bin/llvm-config"
      "-DCMAKE_C_FLAGS='-nostdlib -nostdinc'"
      "-DCMAKE_CXX_FLAGS='-nostdlib -nostdinc'"
      "-DCMAKE_ASM_FLAGS='-nostdlib -nostdinc'"
      "-DCMAKE_INSTALL_PREFIX=%{prefix}%/llvm/lib/clang/12.0.0"
      "-DCOMPILER_RT_BAREMETAL_BUILD=ON"
  ]
  [ make "-j" jobs "-C" "Release" ]
]
install: [
  [ make "-j" jobs "-C" "Release" "install" ]
]
depends: [
  "conf-cmake" {build}
  "llir-opt" {= version}
]
synopsis: "compiler-rt for LLIR"
description: "This package install compiler-rt for LLIR"
url {
  src: "https://github.com/nandor/llir-llvm/archive/0.0.1.tar.gz"
  checksum: "md5=5af579874495e0906402cb3526fea152"
}

